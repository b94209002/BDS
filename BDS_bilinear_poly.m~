function [sxy sx sy sh] = BDS_bilinear_poly(dx,dy,c)

sc = BDS_bilinear_interp(c);

[sxy sx sy] = BDS_bilinear_coef(dx,dy,sc);
sh = c;

for j=2:63
    for i=2:63
          slope(i,j,1) = 0.5d0*(sint(i+1,j+1) + sint(i+1,j  ) - &
                                sint(i  ,j+1) - sint(i  ,j  ) ) * hxinv

%          ! sy
          slope(i,j,2) = 0.5d0*(sint(i+1,j+1) - sint(i+1,j  ) + &
                                sint(i  ,j+1) - sint(i  ,j  ) ) * hyinv

%          ! sxy
          slope(i,j,3) = ( sint(i+1,j+1) - sint(i+1,j  ) &
                          -sint(i  ,j+1) + sint(i  ,j  ) ) * (hxinv*hyinv)
          
    end
end

%[sxy sx sy sh] = BDS_bilinear_limiter(dx,dy,sxy,sx,sy,sh);
return


